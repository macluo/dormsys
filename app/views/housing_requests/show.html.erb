<p id="housing_request"><%= notice %></p>

<p>
  <strong>Student ID:</strong>
  <%= @person.pid %>
</p>

<p>
  <strong>First Name:</strong>
  <%= @person.fname %>
</p>

<p>
  <strong>Last Name:</strong>
  <%= @person.lname %>
</p>

<p>
  <strong>S_type:</strong>
  <%= @student.s_type %>
</p>

<p>
  <strong>Need parking?</strong>
  <%= @housing_request.parking %>
</p>

<p>
  <strong>Parking preference:</strong>
  <%= @housing_request.pref_nearby %>
</p>

<% if @student.s_type != 'family' %>

<p>
  <strong>Building & apartment preference 1:</strong>
  <%= @housing_request.building_pref_1 %>
</p>

<p>
  <strong>Building & apartment preference 2:</strong>
  <%= @housing_request.building_pref_2 %>
</p>

<p>
  <strong>Building & apartment preference 3:</strong>
  <%= @housing_request.building_pref_3 %>
</p>

<% else %>

<p>
  <strong>Family apartment preference 1:</strong>
  <%= @housing_request.apt_pref_1 %>
</p>

<p>
  <strong>Family apartment preference 2:</strong>
  <%= @housing_request.apt_pref_2 %>
</p>

<p>
  <strong>Family apartment preference 3:</strong>
  <%= @housing_request.apt_pref_3 %>
</p>

<% end %>

<p>
  <strong>Application status:</strong>
  <%= @housing_request.app_status %>
</p>


<%= link_to 'Edit', edit_housing_request_path(@housing_request) %> |
<%= link_to 'Back', menu_student_url %>
